<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/colorWhite"
        tools:context=".ui.FeedActivity">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Food For Babies"
            android:textSize="30dp"
            android:textColor="@color/Navy"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewFeedIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/FeedIntro"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@color/fonts"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/button4months"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:text="Birth To 4 Months"
                        android:padding="10dp"
                        android:scaleType="center"
                        android:background="@color/end"
                        android:textColor="@color/Navy"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button4to6"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:text="4 To 6 Months"
                        android:padding="10dp"
                        android:scaleType="center"
                        android:background="@color/end"
                        android:textColor="@color/Navy"/>


                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button6to9"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:text="6 To 9 Months"
                        android:padding="10dp"
                        android:scaleType="center"
                        android:background="@color/end"
                        android:textColor="@color/Navy"/>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button9to12"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:text="9 To 12 Months"
                        android:padding="10dp"
                        android:scaleType="center"
                        android:background="@color/end"
                        android:textColor="@color/Navy"/>


                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button12to18"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:text="12 To 18 Months"
                        android:padding="10dp"
                        android:scaleType="center"
                        android:background="@color/end"
                        android:textColor="@color/Navy"/>



                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button18to24"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:text="18 To 24 Months"
                        android:padding="10dp"
                        android:scaleType="center"
                        android:background="@color/end"
                        android:textColor="@color/Navy"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button24"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:text="24 Months"
                        android:padding="10dp"
                        android:background="@color/end"
                        android:textColor="@color/Navy"
                        android:scaleType="center"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </LinearLayout>

</ScrollView>